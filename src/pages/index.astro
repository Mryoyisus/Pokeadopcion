      }

      h1 { font-size: 2.8rem; font-weight: 700; text-shadow: 0 2px 4px rgba(0,0,0,0.2); }

      .subtitle { font-size: 1.2rem; margin-top: 0.5rem; opacity: 0.95; }

      .container { max-width: 1200px; margin: 2rem auto; padding: 0 1rem; }

      .intro {
        text-align: center;
        margin-bottom: 2rem;
        background: white;
        padding: 1.5rem;
        border-radius: 16px;
        box-shadow: 0 6px 16px rgba(0,0,0,0.08);
      }

      .intro p {
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
        color: #555;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
