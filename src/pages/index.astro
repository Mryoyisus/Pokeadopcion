const url = new URL(Astro.request.url);
const pokemonParam = url.searchParams.get('pokemon');
const openModalId = pokemonParam ? parseInt(pokemonParam) : null;

import AdoptionCard from '../components/AdoptionCard.astro';
import AdoptionModal from '../components/AdoptionModal.astro';

declare global {
  interface Window {
    openPokemonModal: (pokemon: any) => void;
  }
}

interface Pokemon {
  name: string;
  url: string;
}

interface ApiResponse {
  count: number;
  results: Pokemon[];
}

const countResponse = await fetch('https://pokeapi.co/api/v2/pokemon-species/');
const countData = await countResponse.json() as { count: number };
const totalPokemon = countData.count;

const randomIds: number[] = [];
while (randomIds.length < 20) {
  const id = Math.floor(Math.random() * totalPokemon) + 1;
  if (!randomIds.includes(id)) randomIds.push(id);
}

const pokemonDetails = await Promise.all(
  randomIds.map(async (id) => {
    const res = await fetch(`https://pokeapi.co/api/v2/pokemon/${id}/`);
    return await res.json();
  })
);
